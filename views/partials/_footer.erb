<!-- Support Chat/Help Widget (customizable) -->
<% unless request.path.start_with?('/admin') %>
<% if feature_enabled?('show_help_widget') %>
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1000;">
    <div class="toast" id="helpToast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header text-white" style="background-color: <%= custom_color('primary', '#2c3e50') %>">
            <i class="fas fa-question-circle me-2"></i>
            <strong class="me-auto">Need Help?</strong>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body">
            <p class="mb-2">Having trouble with your license?</p>
            <div class="d-grid gap-2">
                <a href="/my-licenses" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-key me-1"></i> Check My Licenses
                </a>
                <a href="#support" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-life-ring me-1"></i> Get Support
                </a>
            </div>
        </div>
    </div>
    
    <!-- Help Button -->
    <button class="btn rounded-circle shadow" 
            onclick="toggleHelpToast()" 
            style="width: 56px; height: 56px; background-color: <%= custom_color('primary', '#2c3e50') %>; border-color: <%= custom_color('primary', '#2c3e50') %>">
        <i class="fas fa-question fa-lg text-white"></i>
    </button>
</div>

<script>
// Help toast functionality
function toggleHelpToast() {
    const toastElement = document.getElementById('helpToast');
    const toast = new bootstrap.Toast(toastElement);
    toast.show();
}

// Auto-show help toast on first visit (using localStorage)
document.addEventListener('DOMContentLoaded', function() {
    if (!localStorage.getItem('helpToastShown') && !window.location.pathname.startsWith('/admin')) {
        setTimeout(() => {
            toggleHelpToast();
            localStorage.setItem('helpToastShown', 'true');
        }, 5000); // Show after 5 seconds
    }
});
</script>
<% end %>
<% end %>
